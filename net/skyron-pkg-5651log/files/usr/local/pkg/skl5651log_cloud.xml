		<field>
			<name>File Tranfer Service Settings</name>
			<type>listtopic</type>
		</field>
               <field>
                        <fielddescr>SFTP File Tranfer Server</fielddescr>
                        <fieldname>sftp_server</fieldname>
                        <description>
                                <![CDATA[
                                Port the Sftp server for ssh will listen on.
                                <span class="text-info">(Default: localhost)</span>
                                ]]>
                        </description>
                        <type>input</type>
                        <size>5</size>
                        <default_value>localhost</default_value>
                        <required/>
                </field>

		<field>
			<fielddescr>SFTP File Tranfer Port</fielddescr>
			<fieldname>sftp_port</fieldname>
			<description>
				<![CDATA[
				Port the sftp server for ssh server will listen on.
				<span class="text-info">(Default: 22)</span>
				]]>
			</description>
			<type>input</type>
			<size>5</size>
			<default_value>22</default_value>
			<required/>
		</field>

		<field>
			<fielddescr>Ssh File Transfer  User</fielddescr>
			<fieldname>sftp_user</fieldname>
			<description>
				<![CDATA[
				Username used to access Sftp Server.
				<span class="text-info">(Default: admin)</span>
				]]>
			</description>
			<type>input</type>
			<size>5</size>
			<default_value>admin</default_value>
			<required/>
		</field>
		<field>
			<fielddescr>Ssh File Tranfer Password</fielddescr>
			<fieldname>sftp_password</fieldname>
			<description>
				<![CDATA[
				Password used to access Sftp server.
				<span class="text-info">(Default: skyron)</span>
				]]>
			</description>
			<type>password</type>
			<size>5</size>
			<default_value>skyron</default_value>
			<required/>
		</field>


